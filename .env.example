# =============================================================================
# Docker Compose Environment Configuration
# =============================================================================
# Copy this file to .env and update the values as needed
# These variables are used by docker-compose.yml

# =============================================================================
# Keycloak Secrets
# =============================================================================
# These should be changed in production!
KEYCLOAK_CLIENT_SECRET=your-client-secret-change-in-production
KEYCLOAK_ADMIN_CLIENT_SECRET=your-admin-client-secret-change-in-production

# =============================================================================
# OpenFGA Configuration
# =============================================================================
# These will be populated after first run or can be pre-configured
OPENFGA_STORE_ID=
OPENFGA_AUTHORIZATION_MODEL_ID=
OPENFGA_API_TOKEN=

# Note: SKIP_OPENFGA_MIGRATIONS is set to "true" in docker-compose.yml
# Migrations are handled by the openfga_migrate service, not application code

# =============================================================================
# Frontend Build Configuration (for production builds)
# =============================================================================
# These are used when building the frontend for production
# For development, these are set in docker-compose.yml
VITE_API_URL=http://localhost:3000
VITE_KEYCLOAK_URL=http://localhost:8081
VITE_KEYCLOAK_REALM=share-app
VITE_KEYCLOAK_CLIENT_ID=communities-app
